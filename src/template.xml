<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id="triangle" class="org.mursil.spring.practice.Triangle">
  	
      <property name="point1" ref="pointA">
      <!-- Referencing a bean via an ID and thus using XML validation to check if an id exists -->
      	
      </property>
      
  	  <property name="point2" >
  	  <!-- Nested Bean only needed in this class. No need to use ID for the nested bean as it will not be referenced anyewhere else -->
	  	<bean class="org.mursil.spring.practice.Point">
		   <property name="x" value="3" />
		   <property name="y" value="4" />
    	</bean>
  	  </property>
  	  
  	  <!-- Accessing a bean via an alias -->
  	  <property name="point3" ref="pointC-alias" />
   
   </bean>
   
   
 	<bean id="pointA" class="org.mursil.spring.practice.Point">
	   <property name="x" value="0" />
	   <property name="y" value="0" />
	</bean>
    
   
    
    <bean id="pointC" class="org.mursil.spring.practice.Point">
	   <property name="x" value="5" />
	   <property name="y" value="6" />
	</bean>
      
  	<alias name="pointC" alias="pointC-alias" />  

</beans>